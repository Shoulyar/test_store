@model Book[]

@{
    ViewData["Title"] = "Result by search";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Length == 0)
{
    <p>Not found</p>
}
else {
<ul>
    @foreach (var book in Model)
    {
        <li><a href="@Url.Action("Index", "Book", new { id = book.Id})">@book.Title</a></li>
    }
</ul>
   
}


